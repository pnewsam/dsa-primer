---
import Container from "./Container.astro";
import { cn } from "../lib/utils";
---

<main>
  <Container class:list={"py-10 md:py-20"}>
    <article
      class={cn(
        "prose",
        "prose-p:mt-0 prose-p:mb-4",
        "prose-headings:mt-0 prose-headings:tracking-tight prose-headings:font-medium prose-headings:mb-4",
        "prose-ul:mt-0 prose-ul:mb-4",
        "prose-li:m-0",
        // "prose-code:text-sm prose-code:bg-gray-100 prose-code:p-2 prose-code:rounded-md prose-code:font-mono prose-code:text-gray-800 prose-code:border prose-code:border-gray-200",
        "prose-a:text-blue-500 prose-a:no-underline prose-a:font-medium hover:prose-a:text-blue-600 hover:prose-a:underline"
      )}
    >
      <slot />
    </article>
  </Container>
</main>
