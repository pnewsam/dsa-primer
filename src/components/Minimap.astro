---
const pages = [
  { url: "/", title: "Home" },
  { url: "/arrays-and-strings", title: "Arrays and Strings" },
  { url: "/trees", title: "Trees" },
  { url: "/hash-tables", title: "Hash Tables" },
  { url: "/graphs", title: "Graphs" },
  { url: "/stacks", title: "Stacks" },
  { url: "/queues", title: "Queues" },
  { url: "/heaps", title: "Heaps" },
];
---

<div class:list={"py-10 md:py-20 sticky top-0 left-0"}>
  <ul>
    {
      pages.map((page) => (
        <li>
          <a
            class="text-blue-500 no-underline font-medium hover:text-blue-600 hover:underline"
            href={page.url}
          >
            {page.title}
          </a>
        </li>
      ))
    }
  </ul>
</div>
